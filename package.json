{
  "scripts": {
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "check:ts": "tsc --project tsconfig.json --noEmit",
    "check:all": "npm run check:lint && npm run check:format && npm run check:ts",
    "test:json": "jest --roots=json",
    "test:y-json": "jest --roots=y-json",
    "test:all": "jest",
    "install:root": "npm install",
    "install:json": "npm install --prefix json",
    "install:y-json": "npm install --prefix y-json",
    "install:y-react": "npm install --prefix y-react",
    "install:y-redux": "npm install --prefix y-redux",
    "install:all": "npm run install:root && npm run install:json && npm run install:y-json && npm run install:y-react && npm run install:y-redux"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  }
}
